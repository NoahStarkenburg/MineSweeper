@{
    ViewData["Title"] = "Home Page";
}
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to MineSweeper</h1>
                <p class="lead mb-4">Challenge yourself with our classic puzzle game. Test your logic, avoid the mines, and become the ultimate MineSweeper master!</p>
                <div class="d-flex gap-3">
                    @if (Context.Session.GetString("User") != null)
                    {
                        <a href="@Url.Action("StartGame", "Game")" class="btn btn-primary btn-lg">Start Game</a>
                        <a href="@Url.Action("Logout", "User")" class="btn btn-outline-danger btn-lg">Logout</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-lg">Login</a>
                        <a href="@Url.Action("Register", "User")" class="btn btn-outline-primary btn-lg">Register</a>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="game-preview">
                    <div class="grid-preview">
                        <!-- This is a visual representation of the game grid -->
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                        <div class="grid-cell"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Game Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <a href="@Url.Action("StartGame", "Game")" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">🎮</div>
                        <h3>Classic Gameplay</h3>
                        <p>Experience the timeless MineSweeper gameplay with our modern interface.</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("SaveGame", "Game")" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">💾</div>
                        <h3>Save Progress</h3>
                        <p>Save your game at any time and continue later from where you left off.</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <div class="feature-card" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#comingSoonModal">
                    <div class="feature-icon">🏆</div>
                    <h3>Track Progress</h3>
                    <p>Monitor your performance and improve your skills over time.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Coming Soon Modal -->
<div class="modal fade" id="comingSoonModal" tabindex="-1" aria-labelledby="comingSoonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: linear-gradient(145deg, #1E1E1E, #2C2C2C); color: #fff; border: 1px solid rgba(255, 255, 255, 0.1);">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="comingSoonModalLabel">Coming Soon!</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="mb-4">
                    <i class="fas fa-rocket fa-3x text-primary"></i>
                </div>
                <h4>Progress Tracking</h4>
                <p>We're working on an exciting new feature to help you track your progress and improve your skills!</p>
                <p class="text-muted">Stay tuned for updates!</p>
            </div>
            <div class="modal-footer justify-content-center border-secondary">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Got it!</button>
            </div>
        </div>
    </div>
</div>

<div class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Play?</h2>
        <p class="lead mb-4">Join thousands of players and start your MineSweeper journey today!</p>
        @if (Context.Session.GetString("User") != null)
        {
            <a href="@Url.Action("StartGame", "Game")" class="btn btn-primary btn-lg">Start Playing Now</a>
        }
        else
        {
            <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-lg">Login to Play</a>
        }
    </div>
</div>
