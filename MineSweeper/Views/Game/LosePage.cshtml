@{
    Layout = "_Layout";
    ViewData["Title"] = "Game Over";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-bomb fa-5x text-danger"></i>
                    </div>
                    <h1 class="display-4 mb-4 text-danger">Game Over</h1>
                    <h2 class="mb-4">Better Luck Next Time!</h2>
                    <div class="message-box mb-5">
                        <p class="lead text-muted">
                            Don't worry, even the best players sometimes hit a mine.
                            Ready to try again?
                        </p>
                    </div>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("StartGame", "Game")" class="btn btn-danger btn-lg">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                        <a href="@Url.Action("SaveGame", "Game")" class="btn btn-outline-danger btn-lg">
                            <i class="fas fa-save me-2"></i>View Saved Games
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        background: linear-gradient(145deg, #1E1E1E, #2C2C2C);
        color: white;
    }
    
    .message-box {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
        padding: 2rem;
        border-radius: 15px;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
    }
    
    .btn-danger {
        padding: 1rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        background: #f44336;
        border: none;
    }
    
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(244, 67, 54, 0.3);
        background: #e53935;
    }
    
    .btn-outline-danger {
        padding: 1rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        border: 2px solid #f44336;
        color: #f44336;
    }
    
    .btn-outline-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(244, 67, 54, 0.2);
        background: rgba(244, 67, 54, 0.1);
    }
    
    .fa-bomb {
        animation: shake 0.5s infinite;
    }
    
    @@keyframes shake {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(-10deg); }
        75% { transform: rotate(10deg); }
    }
</style>
