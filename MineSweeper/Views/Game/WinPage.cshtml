@{
    ViewData["Title"] = "You Win!";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-trophy fa-5x text-warning"></i>
                    </div>
                    <h1 class="display-4 mb-4 text-success">Congratulations!</h1>
                    <h2 class="mb-4">You've Won!</h2>
                    <div class="score-display mb-5">
                        <h3 class="text-muted">Final Score</h3>
                        <div class="display-2 text-primary fw-bold">@ViewBag.Score</div>
                    </div>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("StartGame", "Game")" class="btn btn-primary btn-lg">
                            <i class="fas fa-play me-2"></i>Play Again
                        </a>
                        <a href="@Url.Action("SaveGame", "Game")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-save me-2"></i>View Saved Games
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        background: linear-gradient(145deg, #1E1E1E, #2C2C2C);
        color: white;
    }
    
    .score-display {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
        padding: 2rem;
        border-radius: 15px;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
    }
    
    .btn-primary {
        padding: 1rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        background: #4caf50;
        border: none;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        background: #45a049;
    }
    
    .btn-outline-primary {
        padding: 1rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        border: 2px solid #4caf50;
        color: #4caf50;
    }
    
    .btn-outline-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(76, 175, 80, 0.2);
        background: rgba(76, 175, 80, 0.1);
    }
    
    .fa-trophy {
        animation: bounce 2s infinite;
    }
    
    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
</style>
