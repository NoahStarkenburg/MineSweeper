@{
    ViewData["Title"] = "Login Failed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h4 class="card-title text-danger mb-4">Login Failed</h4>
                    <p class="card-text">Invalid username or password. Please try again.</p>
                    <div class="d-grid">
                        <a asp-action="Index" class="btn btn-primary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
