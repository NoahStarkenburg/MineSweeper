@model MineSweeper.Models.UserModel

@{
    ViewData["Title"] = "Login Success";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="card-title text-success">Welcome Back!</h4>
                        <p class="text-muted">You have successfully logged in.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">First Name</label>
                                <p class="mb-0">@Html.DisplayFor(model => model.FirstName)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Last Name</label>
                                <p class="mb-0">@Html.DisplayFor(model => model.LastName)</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Gender</label>
                                <p class="mb-0">@Html.DisplayFor(model => model.Sex)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">State</label>
                                <p class="mb-0">@Html.DisplayFor(model => model.State)</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <p class="mb-0">@Html.DisplayFor(model => model.DateOfBirth)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <p class="mb-0">@Html.DisplayFor(model => model.Username)</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-controller="Game" asp-action="StartGame" class="btn btn-primary">Start Playing</a>
                        <a asp-action="Logout" class="btn btn-danger">Logout</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
